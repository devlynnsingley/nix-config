#!/bin/sh -e

if [[ "$1" == --alt ]]; then
    export EMACSVER=ERC
    EMACSAPP=ERC
    shift 1
elif [[ "$1" == --rev ]]; then
    export EMACSVER=$2
    EMACSAPP=Emacs
    shift 2
else
    export EMACSVER=28
    EMACSAPP=Emacs
fi

EMACSPATH=../Applications/${EMACSAPP}.app/Contents/MacOS/${EMACSAPP}
EMACSBIN="\$(dirname \$(which emacs))/$EMACSPATH"

exec load-env-emacs$EMACSVER \
     bash -c "unset TZ ; $EMACSBIN $@"
